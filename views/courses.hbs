<div class="row">
    <div class="col-md-12">
        <br>
        <h2 style="display: inline;">Courses</h2>
        <a href="/courses/add" class="btn btn-success float-right">Add New Courses</a>
        <hr />

        <div class="table-responsive">
            <table border="0">
                <thead>
                    <tr>
                        <th>Course Code</th>
                        <th>Course Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each courses}}
                    <tr>
                        <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                        <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
                        <td>
                            <a href="/course/delete/{{courseId}}" class="btn btn-danger float-right">Remove</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{#unless courses}}
    <div class="col-md-12-text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>