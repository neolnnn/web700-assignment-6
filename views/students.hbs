<div class="row">
    <div class="col-md-12">
        <br>
        <h2 style="display: inline;">Students</h2>
        <a href="/students/add" class="btn btn-success float-right">Add New Student</a>
        <hr />

        <div class="table-responsive">
            <table border="0">
                <thead>
                    <tr>
                        <th>Student #</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Status</th>
                        <th>Course ID</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each students}}
                    <tr>
                        <td>{{studentNum}}</td>
                        <td><a href="/student/{{studentNum}}">{{firstName}} {{lastName}}</a></td>
                        <td><a href="mailto:{{email}}">{{email}}</a></td>
                        <td>{{addressStreet}}, {{addressCity}}, {{addressProvince}}</td>
                        <td>{{status}}</td>
                        <td><a href="/students?course={{course}}">{{course}}</a></td>
                        <td>
                            <a href="/student/delete/{{studentNum}}" class="btn btn-danger float-right">Remove</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{#unless students}}
    <div class="col-md-12-text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>